        <section class="flex flex-col items-center">
          <h2 class="text-xl py-2">{item.title}</h2>
        </section>
        <footer class="flex justify-end">
          <LinkNoFollow styleBtn="build" toUrl={item.href} />
        </footer>
      </article>
    ))
