---
import HeaderLink from "@components/HeaderLink.astro";

type Tag = {
  label: string;
  slug?: string;
};
const { label, slug } = Astro.props as Tag;
---

{
  (slug && (
    <HeaderLink title={label} href={`/${slug}`}>
      <i>{label}</i>
    </HeaderLink>
  )) || <i>{label}</i>
}

<style>
  a > i,
  i {
    display: inline-flex;
    width: 100%;
    align-items: center;
    justify-content: center;
    padding: 0.25em 0.5em;
    font-size: clamp(1.2em, 2.5dvw, 1.3em);
    font-weight: bold;
    color: #ffffff;
    border-radius: 3px;
    border: 2px solid #771010;
    background: #dc2626;
  }
</style>
