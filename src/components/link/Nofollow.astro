---
const { to, title, className, style } = Astro.props;
---

<a
  class={`nofollow ${className}`}
  target="_blank"
  href={to}
  rel="nofollow"
  title={title}
  style={{ ...style }}
>
  <slot />
</a>

<style>
  a {
    text-decoration: none;
    display: inline-flex;
    font-size: clamp(1.1em. 2.5vw, 2em);
  }
</style>
