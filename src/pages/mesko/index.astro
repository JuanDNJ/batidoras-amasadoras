---
import Main from "@layouts/Main.astro";
import { getCollection } from "astro:content";
const marcas = await getCollection("batidora-de-pedestal");
export const products = await getCollection(
  "batidora-de-pedestal",
  ({ data }) => {
    return data.marca === "Mesko";
  },
);
---

<Main
  title="Mesko Batidoras De Pedestal"
  description="Descubre la excelencia culinaria con nuestras batidoras de pedestal de marcas lÃ­deres."
>
  <h1>Mesko</h1>
  {
    products.map(
      (brand) =>
        brand && (
          <div>
            <h2 class="text-stone-500 text-xl">{brand.data.title}</h2>
          </div>
        ),
    )
  }
  {JSON.stringify(products)}
</Main>
