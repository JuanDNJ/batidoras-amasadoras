---
const { class: className, src, center, top, bot } = Astro.props;
---

<article class={className}>
  <header class="relative">
    <img
      class={`w-full md:h-96 aspect-video rounded-none object-cover ${
        (center && "object-center") ||
        (top && "object-top") ||
        (bot && "object-bottom")
      }`}
      src={(src && src) || "/images/webp/banner-chef.webp"}
      alt="Banner Principal"
    />
  </header>
</article>
