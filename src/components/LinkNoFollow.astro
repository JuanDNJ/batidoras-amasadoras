---
import { URLS_AMAZON } from "@config/index";
const { toUrl, baTrue, color, styleBtn } = Astro.props;
const classList = {
  build:
    "flex items-center justify-center py-2 px-4 text-2xl md:text-[1.1rem] font-bold text-piolin bg-stone-500 hover:bg-yellow-500  hover:text-stone-800",
  view: "flex py-2 px-4 text-sm bg-yellow-500 hover:bg-yellow-500 text-stone-800 hover:text-stone-600",
  default: "text-stone-800 hover:text-stone-600 hover:underline",
};
---

<a
  target="_blank"
  rel="nofollow"
  arial-label={`Link to Amazon`}
  href={(baTrue && URLS_AMAZON.AMAZON) || toUrl}
  title={(baTrue && styleBtn === "view" && "Ver en Amazon") || "Ver en Amazon"}
  class={` items-center justify-center font-semibold rounded  
              ${
                (!styleBtn && classList.default) ||
                (styleBtn === "defautl" && classList.default) ||
                (styleBtn === "view" && classList.view) ||
                (styleBtn === "build" && classList.build)
              } 
          `}
>
  {
    (!styleBtn && <slot />) ||
      (styleBtn === "defautl" && "Amazon") ||
      (styleBtn === "view" && "Ver en Amazon") ||
      (styleBtn === "build" && "Amazon")
  }
</a>
