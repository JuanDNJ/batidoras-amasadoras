---
import HeaderLink from "./HeaderLink.astro";

const { title, photoUrl, href, details } = Astro.props;
---

<article class="flex-1 flex flex-col shadow-md">
  <header class="flex-1">
    <img
      src={photoUrl}
      class="w-96 h-full aspect-video object-conatin"
      alt="Imagen del Artículo"
    />
    <slot name="header-marc" />
  </header>
  <section class="flex-1">
    <h2 class="text-xl p-4">{title}</h2>
    <slot name="body-marc" />
  </section>
  <footer class="p-4 flex gap-4 justify-end items-end">
    {details && <HeaderLink href={details}>Detalles</HeaderLink>}
    {href && <HeaderLink href={href}>Ver Artículos</HeaderLink>}
    <slot name="footer-marc" />
  </footer>
</article>
