---
import Main from "@layouts/Main.astro";
import LinkNoFollow from "@components/LinkNoFollow.astro";
import HeaderLink from "@components/HeaderLink.astro";
import Video from "@components/Video/Video.astro";
const { title, urlProduct, video, photoProduct, description } = Astro.props;
---

<Main title={title} description={description}>
  <!-- SECTION TOP -->
  <article class={`flex  flex-col gap-8 p-4`}>
    <header class={`grid grid-rows  md:flex md:flex-row gap-4 justify-center`}>
      {
        title && photoProduct && urlProduct && (
          <section class={`flex items-center flex-1 flex-col gap-8 p-4`}>
            <header class={`${!video && "flex   justify-center "}`}>
              <HeaderLink _blank href={photoProduct}>
                <img
                  class={`w-full ${
                    !video && "md:w-96 md:h-96"
                  } md:w-52 h-full  mf:w-full object-cover object-top aspect-video`}
                  src={photoProduct}
                  alt={title}
                />
              </HeaderLink>
            </header>
            <section>
              <h1 class="flex-1 text-2xl px-4 md:text-3xl md:text-center text-stone-800 font-bold">
                <span class="emoji-arrow-white text-[1.5rem]"> ▶️ </span>
                {title}
              </h1>
            </section>
            <footer class="w-full flex justify-end pr-4">
              <LinkNoFollow styleBtn="view" toUrl={urlProduct} />
            </footer>
          </section>
        )
      }
      {video && <Video video={video} />}
    </header>
  </article>
  <slot />
</Main>
